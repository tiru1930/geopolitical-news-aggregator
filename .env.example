# Database Configuration
# NOTE: Password can contain special characters - they will be URL-encoded automatically
POSTGRES_USER=newsagg
POSTGRES_PASSWORD=newsagg_secret
POSTGRES_DB=geopolitical_news

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# AI/LLM Configuration
# Get free API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
LLM_PROVIDER=groq

# Application Security
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# News Fetching Configuration
FETCH_INTERVAL_MINUTES=30
MAX_ARTICLES_PER_SOURCE=50

# ===== OPTIONAL: External News APIs =====

# Twitter/X API (for tweets from strategic accounts)
# Get from: https://developer.twitter.com/
# Basic tier: $100/month, Free tier has limited access
TWITTER_BEARER_TOKEN=

# NewsAPI.org (general news aggregation)
# Get from: https://newsapi.org/
# Free tier: 100 requests/day
NEWSAPI_KEY=

# Mediastack (news API)
# Get from: https://mediastack.com/
# Free tier: 500 requests/month
MEDIASTACK_KEY=

# Note: GDELT is free and requires no API key!
